<adonisControls:AdonisWindow
    x:Class="WpfComponents.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:local="clr-namespace:WpfComponents.App"
    xmlns:inputs="clr-namespace:WpfComponents.Lib.Components.Inputs;assembly=WpfComponents.Lib"
    xmlns:format="clr-namespace:WpfComponents.Lib.Components.Inputs.Format;assembly=WpfComponents.Lib"
    xmlns:converters="clr-namespace:WpfComponents.Lib.Converters;assembly=WpfComponents.Lib">
    <adonisControls:AdonisWindow.Resources>
        <converters:ListToStringConverter x:Key="ListToStringConverter" />
    </adonisControls:AdonisWindow.Resources>
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <inputs:TimeSpanPicker x:Name="TimePickerInput" ValueChanged="TimePickerInput_ValueChanged" />
            <TextBlock
                VerticalAlignment="Center"
                Margin="4,0,0,0"
                Grid.Column="1"
                Text="{Binding Value, StringFormat=dd\\:hh\\:mm\\:ss, ElementName=TimePickerInput}" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <format:FormatTextBox
                x:Name="PhoneNumberInput"
                ValueChanged="PhoneNumberInput_ValueChanged"
                GlobalFormat="numeric|min:0|padded"
                ShowIncrementsButtons="False"
                Format="+{max:99} {max:99} {max:9999} {max:9999}" />
            <TextBlock
                VerticalAlignment="Center"
                Margin="4,0,0,0"
                Grid.Column="1"
                Text="{Binding Values, ElementName=PhoneNumberInput, Converter={StaticResource ListToStringConverter}}" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <inputs:ComboBoxSearch x:Name="ComboBoxSearchInput" ItemsSource="{Binding TestValues, RelativeSource={RelativeSource AncestorType=local:MainWindow}}" />
            <TextBlock
                VerticalAlignment="Center"
                Margin="4,0,0,0"
                Grid.Column="1"
                Text="{Binding SelectedItem, ElementName=ComboBoxSearchInput}" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <inputs:ComboBoxTags ItemsSource="{Binding TestValues, RelativeSource={RelativeSource AncestorType=local:MainWindow}}" />
        </Grid>
        <ComboBox />
    </StackPanel>

</adonisControls:AdonisWindow>

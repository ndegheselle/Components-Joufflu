<UserControl
    x:Class="WpfComponents.Lib.Inputs.TimePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:formated="clr-namespace:WpfComponents.Lib.Inputs.Formated"
    xmlns:local="clr-namespace:WpfComponents.Lib.Inputs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <formated:ToListConverter x:Key="ToListConverter" />
    </UserControl.Resources>
    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:TimePicker}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <formated:FormatedTextBox>
            <formated:FormatedTextBox.Parts>
                <MultiBinding Converter="{StaticResource ToListConverter}">
                    <Binding Path="TestDate.Year" />
                    <Binding Path="TestDate.Month" />
                    <Binding Path="TestDate.Day" />
                    <Binding Path="TestDate.Hour" />
                    <Binding Path="TestDate.Minute" />
                    <Binding Path="TestDate.Second" />
                </MultiBinding>
            </formated:FormatedTextBox.Parts>
        </formated:FormatedTextBox>
        <Button Grid.Column="1" />
    </Grid>
</UserControl>

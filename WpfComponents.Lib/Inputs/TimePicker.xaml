<UserControl
    x:Class="WpfComponents.Lib.Inputs.TimePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:formated="clr-namespace:WpfComponents.Lib.Inputs.Formated"
    xmlns:local="clr-namespace:WpfComponents.Lib.Inputs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:TimeSpanToListConverter x:Key="TimeSpanToListConverter" />
    </UserControl.Resources>

    <formated:FormatedTextBox
        GlobalFormat="numeric|min:0|padded|nullable"
        Format="{}{max:365}d {max:23}h {max:59}m {max:59}s"
        Values="{Binding Value, Converter={StaticResource TimeSpanToListConverter}, RelativeSource={RelativeSource AncestorType=local:TimePicker}}"
        ValuesChanged="FormatedTextBox_ValuesChanged" />
</UserControl>
